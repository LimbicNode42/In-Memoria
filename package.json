{
  "name": "in-memoria",
  "version": "0.4.4",
  "description": "Persistent intelligence infrastructure for agentic development",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "in-memoria": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "schemas"
  ],
  "scripts": {
    "build": "tsc && npm run build:rust && npm run copy-assets",
    "build:prod": "tsc --project tsconfig.production.json && npm run build:rust:optional && npm run copy-assets",
    "copy-assets": "node -e \"require('fs').mkdirSync('dist/storage', {recursive: true}); require('fs').copyFileSync('src/storage/schema.sql', 'dist/storage/schema.sql')\"",
    "build:rust": "npm --prefix rust-core run build",
    "build:rust:optional": "npm run build:rust || echo 'Warning: Rust build failed, continuing without native bindings'",
    "build:universal": "npm run build:rust -- --target universal",
    "build:windows": "npm --prefix rust-core run build -- --target x86_64-pc-windows-msvc",
    "build:macos": "npm --prefix rust-core run build -- --target x86_64-apple-darwin",
    "build:macos-arm": "npm --prefix rust-core run build -- --target aarch64-apple-darwin",
    "build:all-platforms": "npm run build:windows && npm run build:macos && npm run build:macos-arm",
    "prepare:platform-packages": "node scripts/build-platform-packages.js",
    "dev": "tsx watch src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:unit": "vitest run --exclude '**/*integration*'",
    "test:integration": "TEST_WITH_POSTGRES=true TEST_WITH_QDRANT=true vitest run --include '**/*integration*'",
    "test:coverage": "vitest run --coverage",
    "test:manual": "npm run build && node tests/run-all.js",
    "test:manual:single": "npm run build && node tests/run-all.js",
    "typecheck": "tsc --noEmit",
    "start": "node dist/index.js server",
    "prepublishOnly": "npm run build",
    "postinstall": "npm rebuild better-sqlite3 || echo 'Note: better-sqlite3 rebuild failed, but this might still work'",
    "debug": "npx @modelcontextprotocol/inspector node dist/index.js server"
  },
  "keywords": [
    "ai",
    "code-analysis",
    "mcp",
    "intelligent-tools",
    "developer-assistant"
  ],
  "author": "Piyush Airani",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.3",
    "@surrealdb/node": "^1.0.0-beta.3",
    "@xenova/transformers": "^2.17.2",
    "better-sqlite3": "^12.2.0",
    "chokidar": "^4.0.3",
    "eventemitter3": "^5.0.1",
    "glob": "^11.0.3",
    "nanoid": "^5.1.5",
    "openai": "^5.16.0",
    "surrealdb": "^1.3.2",
    "tree-sitter": "^0.21.1",
    "tree-sitter-javascript": "^0.21.4",
    "tree-sitter-python": "^0.21.0",
    "tree-sitter-rust": "^0.21.0",
    "tree-sitter-typescript": "^0.21.2",
    "ws": "^8.18.3",
    "zod": "^3.23.8"
  },
  "optionalDependencies": {
    "@in-memoria/darwin-arm64": "0.4.4",
    "@in-memoria/darwin-x64": "0.4.4",
    "@in-memoria/linux-x64": "0.4.4",
    "@in-memoria/win32-x64": "0.4.4"
  },
  "devDependencies": {
    "@napi-rs/cli": "^3.1.5",
    "@types/better-sqlite3": "^7.6.13",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.1",
    "@vitest/ui": "^3.2.4",
    "jest": "^30.1.3",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
